{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des évènements</h1>
    <div class="container">
        <table id="example" class="display" cellspacing="0" width="100%">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Début</th>
                <th>Fin</th>
                <th>Description</th>
                <th>Couleur</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for event in events %}
                <tr>
                    <td>{{ event.titre }}</td>
                    <td>{% if event.start %}Le {{ event.start|date('d-m-Y à H:i') }}{% endif %}</td>
                    <td>{% if event.end %}Le {{ event.end|date('d-m-Y à H:i') }}{% endif %}</td>
                    <td>{{ event.contenu }}</td>
                    <td>{{ event.color }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('events_edit', { 'id': event.id }) }}">Modifier</a>
                            </li>
                            <li>
                                <a href="{{ path('events_delete', { 'id': event.id }) }}">Supprimer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    <div class="edit_admin">
        <a class="btn btn-default edit_admin"  href="{{ path('calendar_homepage') }}">Retour au calendrier</a>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#example').DataTable();
        } );
    </script>
    <script type="text/javascript" src=" https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css">

{% endblock %}
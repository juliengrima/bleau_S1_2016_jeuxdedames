{% extends 'base.html.twig' %}

{% block body %}

    <h1>editer partenaire</h1>

    <div class="container-fluid">
        {{ form_start(form) }}

        <div class="container">
            <div class="row">
                <p class="">Adresse</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Nom du commer√ßant'}}) }}
                    {{ form_errors(form.adresse) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">photo</p>
                <div class="input-group">
                    {{ form_widget(form.file, {'attr': {'class':'help-block'}}) }}
                    {{ form_errors(form.file) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Lien</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.lien, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                    {{ form_errors(form.lien) }}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <p class="">Donation</p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    {{ form_widget(form.donation, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                    {{ form_errors(form.donation) }}
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        {#{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}#}
        <div class="edit_admin">
            <input class="btn btn-default edit_admin"  type="submit" value="Create" />
        </div>
        {#{% endif %}#}
    </div>

    {{ form_end(form) }}

{% endblock %}
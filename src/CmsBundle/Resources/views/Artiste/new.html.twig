    </div>

    <div class="row">
        {#{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}#}
        <div class="edit_admin">
            <input class="btn btn-default edit_admin"  type="submit" value="Create" />
        </div>
        {#{% endif %}#}
    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('#myTabs a').click(function (e) {
            e.preventDefault()
            $(this).tab('show')
        })
    </script>
{% endblock %}
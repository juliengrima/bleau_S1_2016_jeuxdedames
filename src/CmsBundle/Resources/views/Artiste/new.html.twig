                                        {{ form_widget(accueil.archive) }} Ajouter aux archives
                                    </label>
                                    {{ form_errors(accueil.archive) }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        {% else %}
            {% for accueil in form.artiste %}
                {% if (accueil.vars.value.langue == 'fr') %}
                    <div role="tabpanel" class="tab-pane active" id="home">
                        <h1>Langue: Français</h1>
                        <div class="container">
